<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Text -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field Data Control"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Field Data Display Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/soilMoistureTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/receivedSoilMoistureTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/motorStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/lowerThresholdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/upperThresholdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/modeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/remainingTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Scheduler and Manual Control Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rectangle_background"
            android:elevation="4dp">

            <EditText
                android:id="@+id/timerInput"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginBottom="16dp"
                android:hint="Set Timer (minutes)"
                android:inputType="number"
                android:padding="8dp"
                android:background="@drawable/rectangle_background" />

            <Button
                android:id="@+id/switchToManualButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch to Manual Control"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/switchToAutoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch to Auto Control"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/turnPumpOnButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Turn Pump ON"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/turnPumpOffButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Turn Pump OFF"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/setTimerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Timer"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
