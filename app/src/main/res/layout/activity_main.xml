<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="16dp">

    <!-- Company Logo -->
    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo"
        android:contentDescription="Company Logo"
        android:scaleType="fitCenter"/>

    <!-- Current Location -->
    <TextView
        android:id="@+id/current_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Location: --"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_below="@id/company_logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <!-- Username -->
    <TextView
        android:id="@+id/username_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘¨â€ðŸŒ¾ Hello, Farmer!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_below="@id/current_location_text_view"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <!-- Sensor Data Card -->
    <RelativeLayout
        android:id="@+id/field_sensor_data_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_text_view"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_card"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/temperature_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ¡ï¸ Temperature: --Â°C"
            android:textSize="18sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/humidity_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature_data"
            android:layout_marginTop="8dp"
            android:text="ðŸ’§ Humidity: --%"
            android:textSize="18sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/wind_speed_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/humidity_data"
            android:layout_marginTop="8dp"
            android:text="ðŸŒ¬ï¸ Wind Speed: -- km/h"
            android:textSize="18sp"
            android:textColor="#333333"/>
    </RelativeLayout>

    <!-- Button Section -->
    <!-- Button Section -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/field_sensor_data_box"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/rounded_card"
        android:padding="16dp">

        <!-- Field Control Button -->
        <Button
            android:id="@+id/field_control_button"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="ðŸŒ± Field Control"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/green_button_background"
            android:layout_marginEnd="8dp"/>

        <!-- Rain Forecast Button -->
        <Button
            android:id="@+id/rain_forecast_button"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="â˜ï¸ Rain Forecast"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/green_button_background"
            android:layout_marginEnd="8dp"/>

        <!-- New Irrigation Recommendation Button -->
        <Button
            android:id="@+id/irrigation_button"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="ðŸ’§ Irrigation"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/green_button_background"/>
    </LinearLayout>
    <!-- Profile & Logout Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_container"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/profile_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="ðŸ‘¤ Profile"
            android:textSize="16sp"
            android:background="@drawable/rounded_card"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/logout_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="ðŸšª Logout"
            android:textSize="16sp"
            android:background="@drawable/rounded_card"/>
    </LinearLayout>

    <!-- Loading ProgressBar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>
